include includes/head

body

    if !knownUser
        include loginForm

    else

        button.admin
            <i class="fa-solid fa-lock"></i>
            a(href="/admin") Admin
        
        button#button-logout
            a(href="/logout") Log ud

        h1 Bil:
            select#dropdown-select-van(name='select-van')
                each van in vans
                    option(value=option, id=`option-${van.licensePlate}`)=van.licensePlate + ' - ' + van.owner


        button.addProduct
            <i class="fa-solid fa-box-open"></i>
            a(href="/createProduct") Tilføj ny vare

        each product in products
            div.product-container
                p #{product.name}
                p.storage-p(data-productid=product.productId) På lager: #{product.amount} #{product.unit}
                    
                div.buttons
                    button.delete-button(type='button', data-productid=product.productId)
                        ion-icon(name="trash-outline")  
                    button.button-plusmin(type='button', data-productid=product.productId, data-action="increase")
                        ion-icon(name="add-circle-outline")
                    button.button-plusmin(type='button', data-productid=product.productId, data-action="decrease")
                        ion-icon(name="remove-circle-outline")



