include includes/head

body
    h1 Bil:
        select(name='my-dropdown')
            each option in ['Olivers Bil', 'Bil 2', 'Bil 3']
                option(value=option)= option
    


    button.admin 
        a(href="/admin") Admin
    

    each product in products
        div.product-container
                p #{product.productName}
                p På lager: #{product.amount} #{product.unit}
                div.buttons
                    button.delete-button(type='button')
                        ion-icon(src="icons/trash-outline.svg")
                    button.button-plus(type='button', data-proudctid=product.id, on-click='justerAntal(this, "op")') +
                    button.button-minus(type='button', data-productid=product.id, on-click='justerAntal(this, "ned")') -

    button.addProduct
        a(href="/createProduct") Tilføj ny vare

