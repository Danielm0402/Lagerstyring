include includes/head

body
    a(href='/admin')
        button
            i.fa-sharp.fa-solid.fa-left-long
            span.knap Tilbage

    form(action=`/user`, method="post")

        div#div-create-user
        div 
            h2 Opret medarbejder
        div
            label(for="input-name") Navn:
            input.input-userName(type="text" name="name")

            label(for="input-employeeId") Medarbejder nr.: 
            input.input-employeeId(type="text" name="employeeId")
            
            label(for="input-username") Brugernavn: 
            input.input-username(type="text" name="username")

            label(for="input-password") Password: 
            input.input-password(type="text" name="password")




            label(for="input-role")
        div#radio-buttons
        input(type="radio", id="admin", name="role", value="admin")
        label(for="admin") Admin

        input(type="radio", id="electrician", name="role", value="electrician")
        label(for="electrician") Elektrikker



        button(id="create-user-btn" class="button-create" type="submit")
            i.fa-solid.fa-user
            span.knap Opret medarbejder